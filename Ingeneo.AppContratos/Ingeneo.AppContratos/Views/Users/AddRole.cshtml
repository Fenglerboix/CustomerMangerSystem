@model Ingeneo.AppContratos.ModelViews.UserView


@{
    ViewBag.Title = "Admin";
}

<h2>Agregar Rol al Usuario: @Model.Name</h2>

<h3>@ViewBag.Error</h3>

@using (Html.BeginForm("AddRole", "Users", new { userID = Model.UserID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <h1>Roles</h1>            
            <div class="col-md-10">
                @Html.DropDownList("RoleID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Role.RoleID, "", new { @class = "text-danger" })
            </div>
        </div>    
        <input type="submit" value="Agregar Rol" class="btn btn-success" />    
        @Html.ActionLink("Regresar a Usuarios", "Roles", new { userID = Model.UserID}, new { @class = "btn btn-info" })      
        <br />
        <br />
        <br />      
        @*tabla para mostrar el sumario de los permisos que tiene cada rol*@        
        <table class="table table-striped table-hover table-responsive table-bordered">
            <thead>
                <tr style="background:#0945a5; color:#ffffff" >
                <th colspan="7" style="text-align:center">Permisos Según Rol</th>
                </tr>
                <tr style="background:#546de5; color:#ffffff">
                    <th style="background:#0945a5; color:#ffffff">Rol</th>
                    <th style="text-align:center">Ver</th>  
                    <th style="text-align:center">Crear</th>  
                    <th style="text-align:center">Editar</th>  
                    <th style="text-align:center">Borrar</th>
                    <th style="text-align:center">Imprimir</th>  
                    <th style="text-align:center">Asignar Rol</th>                      
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="background:#28682e; color:#ffffff">Admin</td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>                                        
                </tr>                
                <tr>
                    <td style="background:#28682e; color:#ffffff">Monitor</td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>
                    <td style="text-align:center"></td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>
                    <td style="text-align:center"></td>
                </tr>                
                <tr>
                    <td style="background:#28682e; color:#ffffff">Analista</td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>
                    <td style="text-align:center"></td>
                    <td style="text-align:center"></td>
                    <td style="text-align:center"><span class="glyphicon glyphicon-ok"></span></td>
                    <td style="text-align:center"></td>
                </tr>             
            </tbody>
        </table>  
    </div>   
}