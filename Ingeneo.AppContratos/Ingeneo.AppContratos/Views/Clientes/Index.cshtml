@model IEnumerable<Ingeneo.AppContratos.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Clientes</h2>

<p>
    <a class="btn btn-primary" href="/Clientes/Create">Crear nuevo <span class="glyphicon glyphicon-plus"></span></a>
    <a class="btn btn-success" href="/Contratos/Index">Ir a Contratos <span class="glyphicon glyphicon-arrow-right"></span></a>    
</p>

<table class="table table-striped table-hover table-responsive table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pais)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ciudad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pais)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ciudad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td >
            @Html.TextAreaFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <td>
            <a class="btn btn-warning" data-toggle="tooltip" title="Editar" href="/Clientes/Edit/@item.id"><span class="glyphicon glyphicon-edit"></span></a>
            <a class="btn btn-info" data-toggle="tooltip" title="Detalle cliente"   href="/Clientes/Details/@item.id"><span class="glyphicon glyphicon-search"></span></a>
            <a class="btn btn-danger" data-toggle="tooltip" title="Borrar" href="/Clientes/Delete/@item.id"><span class="glyphicon glyphicon-trash"></span></a> 
            <a class="btn btn-primary" data-toggle="tooltip" title="Generar Reporte" href="/ReportesClientes/Reportes/@item.id"><span class="glyphicon glyphicon-file"></span></a>                     
        </td>
    </tr>
}
</table>
