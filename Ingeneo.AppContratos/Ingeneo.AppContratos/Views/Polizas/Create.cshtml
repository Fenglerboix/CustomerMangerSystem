@model Ingeneo.AppContratos.Models.Poliza

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm(null, null, FormMethod.Post, new
{
    id = "SavedFormPolicy"
}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Crear Póliza</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CodigoPoliza, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CodigoPoliza, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.CodigoPoliza, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NombreAseguradora, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombreAseguradora, new { htmlAttributes = new { @class = "form-control"} })           
                @Html.ValidationMessageFor(model => model.NombreAseguradora, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaInicioPoliza, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class='input-group date' id='datetimepicker6' style="width:280px">
                    @Html.EditorFor(model => model.FechaInicioPoliza, new { htmlAttributes = new { @class = "form-control datepicker" } })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
              @Html.ValidationMessageFor(model => model.FechaInicioPoliza, "", new { @class = "text-danger" })
           </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaFinpoliza, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class='input-group date' id='datetimepicker7' style="width:280px">
                    @Html.EditorFor(model => model.FechaFinpoliza, new { htmlAttributes = new { @class = "form-control datepicker" } })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
               @Html.ValidationMessageFor(model => model.FechaFinpoliza, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">           
            <div class="col-md-10">
               @Html.Hidden("idContrato", null, htmlAttributes: new { @class = "form-control" })           
              
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="btnCreate" value="Guardar" onclick="Validate(this, event);" class="btn btn-success" />               
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-primary" href="/Contratos/Index"><span class="glyphicon glyphicon-home"></span> Regresar a contratos</a>
</div>

@section Scripts {

    @Scripts.Render("~/Scripts/validPolicy.js")
}